<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_margin="@dimen/widget_margin"
    android:paddingRight="10dp"
    android:paddingLeft="20dp"
    android:id="@+id/bw_root_layout">

    <TextView
        android:layout_centerVertical="true"
        android:id="@+id/bw_caption_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Just "
        android:textColor="@color/white.dark"
        android:shadowColor="@color/black.dark"
        android:shadowRadius="1"
        android:shadowDy="-1"
        android:shadowDx="-1"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/bw_name_label"
        android:layout_toRightOf="@+id/bw_caption_label"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RunIt ..."
        android:textStyle="bold"
        android:textColor="@color/white.darkest"
        android:shadowColor="@color/black.dark"
        android:shadowRadius="2"
        android:shadowDy="-1"
        android:shadowDx="-1"
        android:textSize="20sp"
        />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:src="@drawable/search_image_small_white"
        android:layout_alignParentRight="true"/>

    <ImageView
        android:layout_below="@+id/bw_caption_label"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line_in"
        android:layout_marginTop="5dp"
        android:layout_marginRight="40dp"/>

</RelativeLayout>