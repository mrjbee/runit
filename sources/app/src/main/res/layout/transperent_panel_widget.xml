<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_margin="@dimen/widget_margin"
    android:paddingRight="0dp"
    android:paddingLeft="0dp"
    android:id="@+id/bw_root_layout"
    android:gravity="bottom">

    <ImageView
        android:id="@+id/bw_search_image"
        android:layout_marginTop="23dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/search_image_small_white"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:layout_toRightOf="@+id/bw_search_image"
        android:paddingLeft="10dp"
        android:layout_centerVertical="true"
        android:id="@+id/bw_caption_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Just "
        android:textColor="@color/white.dark"
        android:shadowColor="@color/black.dark"
        android:shadowRadius="1"
        android:shadowDy="-1"
        android:shadowDx="-1"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/bw_name_label"
        android:layout_toRightOf="@+id/bw_caption_label"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RunIt ..."
        android:textStyle="bold"
        android:textColor="@color/white.darkest"
        android:shadowColor="@color/black.dark"
        android:shadowRadius="2"
        android:shadowDy="-1"
        android:shadowDx="-1"
        android:textSize="20sp"
        />

    <ImageView
        android:id="@+id/bw_category_image"
        android:layout_alignParentRight="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="7dp"
        android:layout_centerVertical="true"
        android:src="@drawable/cayegory_image_small_white"/>

     <ImageView
        android:layout_below="@+id/bw_caption_label"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line_in"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="55dp"/>

</RelativeLayout>